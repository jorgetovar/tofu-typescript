{
  "compilerOptions": {
    "target": "ES2020",         // Target ES2020 for modern JavaScript features
    "module": "commonjs",       // Node.js uses CommonJS modules
    "outDir": "./dist",         // Output directory for transpiled JavaScript files
    "strict": true,             // Enable all strict type checks
    "esModuleInterop": true     // Ensure compatibility with CommonJS modules
  },
  "include": ["src/**/*.ts"],    // Include all TypeScript files in src directory
  "exclude": ["node_modules"]
}
